load("//bazel:spu.bzl", "spu_cc_library")

package(default_visibility = ["//visibility:public"])

spu_cc_library(
    name = "homosm2",
    srcs = [
        "ahesm2.cc",
        "config.cc",
    ],
    hdrs = [
        "ahesm2.h",
        "ciphertext.h",
        "config.h",
        "private_key.h",
        "public_key.h",
        "t1.h",
        "t2.h",
    ],
    deps = [
        "@yacl//yacl/crypto/ecc:spi",
        "@yacl//yacl/crypto/ecc/openssl",
        "@yacl//yacl/math/mpint",
        "@yacl//yacl/utils:cuckoo_index",
        "@yacl//yacl/utils/spi",
    ],
)